<?xml version="1.0" encoding="utf-8"?>
<com.dk.umwerktestapp.ui.main.list.layout.UserListLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F1EF"
    android:clickable="true" >

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iw_avatar"
        android:background="@drawable/avatar_oval_boarder"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        app:srcCompat="@drawable/avatar_oval_boarder"
        android:transitionName="avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iw_avatar"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_registration_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textColor="@color/colorDarkGray" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/tv_registration_date"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:transitionName="username"/>
    </RelativeLayout>

</com.dk.umwerktestapp.ui.main.list.layout.UserListLayout>
