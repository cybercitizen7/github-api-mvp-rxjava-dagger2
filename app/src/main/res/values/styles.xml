<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDreamyBlue80</item>
        <item name="colorPrimaryDark">@color/colorDreamyBlue80</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPerlWhite</item>
    </style>

    <style name="GithubTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGithubDefault</item>
        <item name="colorPrimaryDark">@color/colorGithubDefault80</item>
        <item name="colorAccent">@color/colorGithubAccent</item>
    </style>

    <style name="ImageViewListStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">@dimen/default_small_padding</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="android:background">@drawable/avatar_oval_boarder_github</item>
    </style>

    <style name="PartialLayoutStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PartialLayoutStyle.TextViewRed">
        <item name="android:background">@drawable/rectangle_rounded_red</item>
    </style>
    <style name="PartialLayoutStyle.TextViewGreen">
        <item name="android:background">@drawable/rectangle_rounded_green</item>
    </style>
    <style name="PartialLayoutStyle.TextViewLime">
        <item name="android:background">@drawable/rectangle_rounded_lime</item>
    </style>

    <style name="PartialLayoutStyle.GithubAccent">
        <item name="android:background">@drawable/rectangle_rounded_github_accent</item>
    </style>

</resources>
